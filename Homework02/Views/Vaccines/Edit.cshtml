@model Vaccine 
<form method="post" id="editform">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value=@Model.Name required />

    </div>



    <div class="form-group">
        <label for="DosesRequired">Doses Required</label>
        <select name="DosesRequired" id="DosesRequired" form="editform">

            @if (@Model.DosesRequired == 1)
            {
                <option value="1" selected>1</option>
                <option value="2">2</option>
            }

            @if(@Model.DosesRequired == 2)
            {
                <option value="1" >1</option>
                <option value="2" selected>2</option>
            }

        </select>
    </div>

    <div class="form-group">
        <label for="DaysBetween">Days Between Doses</label>
        <input type="number" class="form-control" id="DaysBetween" name="DaysBetween" value=@Model.DaysBetween>
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>